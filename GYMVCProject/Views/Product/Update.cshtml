
@{
    ViewData["Title"] = "Update";
}

<h1>Ürün Güncelleme</h1>

@model ProductViewModel

<form asp-controller="Product" asp-action="Update" method="post">


    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün İsmi:</label>
        <input class="form-control" asp-for="Name">
    </div>


    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ürün Fiyatı:</label>
        <input class="form-control" asp-for="Price">
    </div>


    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Ürün Stok:</label>
        <input class="form-control" asp-for="Stock">

    </div>


    <div class="mb-3">
        @*       <label asp-for="Color" class="form-label">Ürün Renk:</label>
        <input class="form-control" asp-for="Color">*@


        <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect">
            <option value="">Renk Seçiniz.</option>
        </select>
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" asp-for="IsPublish">
            Yayınlansın mı?
        </label>

    </div>

    <div class="mb-3 mt-3">
        <h4>Ürün Kac Ay Satışta Kalıcak</h4>
        @foreach (var item in ViewBag.Expire as Dictionary<string, int>)
        {
            <div class="form-check">
         
                    <input checked=@(item.Value==ViewBag.Expirevalue ? true :false) class="form-check-input" type="radio" id="@(item.Value) Expire" asp-                            for="Expire" value="@item.Value">
                <label class="form-check-label" asp-for="Expire" for="@(item.Value) Expire" Expire@{item.Value}">
                    @item.Key
                </label>
            </div>
        }
    </div>

    <div class="form-floating mb-3">
        <textarea asp-for="Description" class="form-control" placeholder="Ürün Açıklama" id="floatingTextarea"></textarea>
        <label asp-for="Description">Ürün Açıklaması</label>
    </div>

    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Yayınlanma Tarihi:</label>
        <input class="form-control" asp-for="PublishDate">
    </div>

    <button type="submit" class="btn btn-primary">Ürün Kaydet</button>



</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }