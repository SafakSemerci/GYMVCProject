
@{
    ViewData["Title"] = "Index";
}

@model List<ProductViewModel>

<h1>Ürünler</h1>

@if (TempData["status"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["status"]
    </div>
    
}


<a asp-controller="Product" asp-action="add">Ürün Ekle</a>

<table class="table">
    <thead>
    <tr>
             <th>Ürün Adı:</th>
             <th>Ürün Fiyatı:</th>
             <th>Ürün Stock: </th>
             <th>Ürün Renk: </th>
             <th>Yayınlanacak Mı: </th>
            <th>Yayınlanma Süresi: </th>
            <th>Yayınlanma Tarihi: </th>
             <th>Ürün Açıklaması: </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Color</td>
            <td>
                @(item.IsPublish ? "Evet" : "Hayır")
            </td>
            <td>@item.Expire Ay</td>
            <td>@item.PublishDate</td>
            <td>@if (item.Description.Length>20)
                {
                    @item.Description.Substring(0,20) <text>...</text>
                    
                }
                else
                {
                     @item.Description
                }

            </td>
            <td><a asp-controller="product" asp-action="remove" asp-route-id="@item.Id">Sil</a></td>
            <td><a asp-controller="product" asp-action="update" asp-route-id="@item.Id">Güncelle</a></td>
    </tr>
    }
    </tbody>
</table>




